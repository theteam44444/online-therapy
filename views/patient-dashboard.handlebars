
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/themes/base/jquery-ui.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.2.3/flatpickr.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.2.3/themes/dark.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/dark.css">
  <title>Taskmaster Pro</title>
</head>
  
<body>
  <div class="row min-vh-100 no-gutters">
    <header class="col-12 col-lg-3 bg-dark text-light sticky-top d-flex flex-column p-4 p-lg-3">
  
      <h5 class="text-center">
      <span class="oi oi-task d-inline d-lg-none"></span>
        Schedule Appointment Now
      </h5>
      
      <input class="mt-10 mb-5" type="datetime-local" id="dateTime" placeholder="Please select date and time" data-input>
      
      <div class="btn-group">
        <button class= "btn btn-primary dropdown-toggle mb-5" id="dropdownIssue" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Choose Symptom
        </button>
        <div class="dropdown-menu">
          <button class="dropdown-item" type="button">Marriage Counselling</button>
          <button class="dropdown-item" type="button">Mental Health</button>
          <button class="dropdown-item" type="button">Drug Addiction</button>
        </div>
      </div>


      <div class="btn-group">
        <button class= "btn btn-primary dropdown-toggle mb-5" id="dropdownDoctor" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Choose Doctor
        </button>
        <div class="dropdown-menu">
          {{#each doctors}}
               <button class="dropdown-item" type="button">{{doctor.first_name}} {{doctor.last_name}} </button>
          {{/each}}
        </div>
      </div>

      <div class="btn-group">
        <button class= "btn btn-primary dropdown-toggle mb-5" id="dropdownTypeAppointment" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Choose Type of Appointment
        </button>
        <div class="dropdown-menu">
          <button class="dropdown-item" type="button">Zoom Video Call</button>
          <button class="dropdown-item" type="button">Mobile Phone</button>
          <button class="dropdown-item" type="button">In-Person</button>
        </div>
      </div>

      <button class="class=”btn btn-success" id="createAppointment" type="button" class="btn btn-block btn-add"> Create Appointment</button>

    </header>


    <main class="col-12 col-lg-9 d-flex flex-column">

      <div class="m-5 row justify-content-around">

        <div class="col-12">
          <div class = "card mb-3">
            <h4 class = "card-header bg-dark text-light">
              Client Personal  Details
            </h4>
            <table class="table">
              <thead>
                  <tr>
                      <th scope="col">First Name </th>
                      <th scope="col">Last Name </th>
                      <th scope="col">Current Address</th>
                      <th scope="col">Date of Birth</th>
                      <th scope="col">Email Address</th>
                  </tr>
              </thead>
              <tbody>
                  <tr>
                     <td>{{client.first_name}}</td>
                     <td>{{client.last_name}}</td>
                     <td>{{client.address}}</td>
                     <td>{{client.birth_date}}</td>
                     <td>{{client.email}}</td>
                  </tr>
                  
              </tbody>
            </table>
              
            
          </div>
        </div>

        <div class="col-12">
          <div class = "card">
            <h4 class = "card-header bg-dark text-light">
              Existing Appointments
            </h4>
            <table class="table">
              <thead>
                  <tr>
                      <th scope="col">#</th>
                      <th scope="col">Date/Time </th>
                      <th scope="col">Doctor Name </th>
                      <th scope="col">Symptom Experiencing</th>
                      <th scope="col">Type of Appointment</th>
                  </tr>
              </thead>
              <tbody>
                {{#each doctors}}
                  <tr>
                      <th scope="row">1</th>
                      <td>{{appointment.date}}</td>
                      <td>{{appointment.doctor_id}}</td>
                      <td>{{appointment.details}}</td>
                      <td>{{appointment.mode}}</td>
                  </tr>
                {{/each}} 
              </tbody>
            </table>
          </div>
        </div>

      </div>

    </main>
  </div>

  <script>
    $("# dropdown id").change(function () {
    //update the value in to span
    $('# span id').html($('# dropdown id').val());
    $('# dropdown id').hide();
});
  </script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.2.3/flatpickr.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-ui-touch-punch@0.2.3/jquery.ui.touch-punch.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/umd/popper.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script> 
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.2.3/flatpickr.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  

</body>

</html>